                    text: 'Participants by site Male and Female'
                },
                xAxis: {
                    categories: varSiteName
                },
                plotOptions: {
                    series: {
                        dataLabels: {
                            enabled: true
                        }
                    }
                },
                series: [
                    {
                        type: 'column',
                        name: 'Total Male',
                        data: varMale,
                        color: Highcharts.getOptions().colors[3]
                    }, {
                        type: 'column',
                        name: 'Total Female',
                        data: varFemale,
                        color: Highcharts.getOptions().colors[2]
                    }]
            });



    }

    //End of graphfour
